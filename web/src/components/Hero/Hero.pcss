.hero {
  text-align: center;
  padding: var(--spacing-16) var(--spacing-4);
  margin-bottom: var(--spacing-12);
}

.hero__title {
  font-size: 3.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-inverse);
  margin-bottom: var(--spacing-4);
  line-height: 1.1;
}

.hero__subtitle {
  font-size: var(--font-size-xl);
  color: var(--color-text-inverse);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.5;
}